{% trans_default_domain 'avito-products.admin' %}

<div class="modal-dialog modal-dialog-centered" style="max-width: 850px;">

    {{ form_start(form) }}

    <div class="modal-content p-3 border-bottom border-5 border-primary">

        <div class="modal-header">
            <h5 class="modal-title">
                {{ 'page.description'|trans }}
            </h5>
        </div>

        <div class="modal-body justify-content-between gap-3">

            <div class="tab-pane fade show" id="tab_description" role="tabpanel">

                {{ form_row(form.description, {
                    attr: { class: 'ckeditor'}
                }) }}
            </div>

        </div>

        <div class="modal-footer">

            {% if form.token.value is defined %}
                <div class="flex-grow-1 d-flex gap-3 align-items-center">

                    <strong class="mb-3">
                        Профиль авито:
                    </strong>

                    {{ form_widget(form.token.value, {
                        placeholder: 'Выберите профиль Avito ...',
                        attr: { 'data-select' : 'select2', style: 'width: 300px;', class: 'mb-0' }
                    }) }}
                </div>
            {% endif %}

            <div class="mt-3 gap-3 d-flex">
                {# Отмена #}
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">
                    {{ 'btn.cancel'|trans({}, 'core.btn') }}
                </button>

                {# Сохранить #}
                {{ form_widget(form.avito_products_description_update, { label: '
                    <span>'~ 'btn.save'|trans({}, 'core.btn') ~'</span>
                    <span class="spinner-border spinner-border-sm vertical-middle d-none"></span>
			    '}) }}
            </div>
        </div>

    </div>

    {{ form_end(form) }}
</div>